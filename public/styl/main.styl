@import 'vendor'
@import 'profile'

side-menu-width-pc = 300px

html, body
  height 100%
  padding 0
  margin 0
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%

html, a
  -webkit-font-smoothing  antialiased text-shadow  1px 1px 1px rgba(0, 0, 0, 0.004)

#container
  height 100%
  display -ms-flexbox
  display -webkit-box
  display -moz-box
  display -ms-box
  display box
  -ms-flex-direction row
  vendor('box-orient', horizontal)

#side-menu
  background #A5ECFA
  width side-menu-width-pc
  -ms-flex 0 side-menu-width
  vendor('box-flex', 0)

#content
  -ms-flex 1
  vendor('box-flex', 1)
  background #FAF7F3
  text-shadow -1px 1px 0 rgba(255, 255, 255, 1)

@media screen and (min-width 769px)
  #content
    overflow-y auto
    max-height 100%

@media screen and (max-width 768px)
  #container
    -ms-flex-direction column
    vendor('box-orient', vertical)

  #side-menu
    width 100%
    -ms-flex 0 100%
