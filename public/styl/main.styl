a.button-delete:hover, a.button-edit:hover
  background #A5ECFA
  cursor pointer

.editor
  height 0px
  vendor('transition', all 0.5s ease)
  overflow hidden
  margin 30px 0 0 0

  input.title-edit
    -webkit-font-smoothing  antialiased text-shadow  1px 1px 1px rgba(0, 0, 0, 0.004)
    width calc(100% - 30px)
    padding 10px
    font-size 90%
    border-radius 5px
    border none
    background #EAE5DE
    color #45828E

  input:focus
    border solid 2px #39AEC6

  textarea.text-edit
    -webkit-font-smoothing  antialiased text-shadow  1px 1px 1px rgba(0, 0, 0, 0.004)
    margin 30px 0 0 0
    width calc(100% - 30px)
    padding 10px
    font-size 90%
    border-radius 5px
    border none
    background #EAE5DE
    height 260px
    resize none
    color #45828E

  textarea.text-edit:focus
    border solid 2px #39AEC6

.editing
  height 400px


