@import 'vendor'

side-menu-width-pc = 300px

html, body
  height 100%
  padding 0
  margin 0

#container
  height 100%
  display -ms-flexbox
  display -webkit-box
  display -moz-box
  display -ms-box
  display box
  -ms-flex-direction row
  vendor('box-orient', horizontal)

#side-menu
  background #037E8C
  width side-menu-width-pc
  -ms-flex 0 side-menu-width
  vendor('box-flex', 0)

#content
  -ms-flex 1
  vendor('box-flex', 1)
  overflow-y auto
  max-height 100%

@media screen and (max-width 768px)
  #container
    -ms-flex-direction column
    vendor('box-orient', vertical)

  #side-menu
    background #037E8C
    width 100%
    -ms-flex 0 100%
